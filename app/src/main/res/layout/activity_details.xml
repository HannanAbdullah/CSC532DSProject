<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailsActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="7dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                app:cardElevation="8dp"
                android:outlineSpotShadowColor="@color/yellow"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text_details_title"
                        android:textColor="@color/lightBlue"
                        android:textStyle="bold"
                        android:textSize="26sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>
                    <ImageView
                        android:id="@+id/img_details_news"
                        android:scaleType="fitXY"
                        android:src="@drawable/not_available"
                        android:layout_marginTop="8dp"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="250dp">
                    </ImageView>
                    <TextView
                        android:id="@+id/text_details_author"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/green"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:id="@+id/text_details_time"
                        android:layout_marginTop="6dp"
                        android:textStyle="bold"
                        android:textColor="@color/yellow"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/text_details_detail"
                android:textSize="22sp"
                android:textColor="@color/lightBlue"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </TextView>

            <TextView
                android:id="@+id/text_details_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:maxLines="100"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"></TextView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>